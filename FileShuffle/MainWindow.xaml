<Window x:Class="FileShuffle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileShuffle"
        mc:Ignorable="d"
        Title="EzShuffle" Height="145" Width="831" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Left" VerticalContentAlignment="Top">
    <Grid>
        <Button x:Name="shuffleButton" Content="Shuffle" HorizontalAlignment="Left" Margin="691,64,0,0" VerticalAlignment="Top" Click="shuffleButton_Click" Height="25" Width="114" FontSize="14"/>
        <TextBox x:Name="filepathTextBox" Margin="129,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="676" Height="25" VerticalContentAlignment="Center" FontSize="14" HorizontalAlignment="Left" Foreground="#FF444444" FontWeight="Bold"/>
        <Button x:Name="browseButton" Content="Browse" HorizontalAlignment="Left" Margin="10,34,0,0" VerticalAlignment="Top" Height="25" Width="114" FontSize="14" UseLayoutRounding="True" Click="browseButton_Click"/>
        <Label Content="Directory" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="129,15,0,0" Padding="0,0,0,0" FontSize="14"/>

    </Grid>
</Window>
